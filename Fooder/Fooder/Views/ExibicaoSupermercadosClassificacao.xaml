<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fooder.Views.ExibicaoSupermercadosClassificacao"
             Title="Classificação Supermercados">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Fooder!" Command="{Binding BuscarElementos}">
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <StackLayout Padding="10">
        <Picker ItemsSource="{Binding ListaMercados}" SelectedItem="{Binding ListaSelecionada, Mode=TwoWay}"></Picker>

        <ListView ItemsSource="{Binding ListaClassificacaoSupermercados}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Label Text="{Binding NomeSuperMercado}"></Label>
                        <Label Text="{Binding PrecoTotal}"></Label>
                        <Label Text="{Binding UrlMapa}"></Label>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>