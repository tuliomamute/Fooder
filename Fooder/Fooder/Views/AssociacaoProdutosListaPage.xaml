<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fooder.Views.AssociacaoProdutosListaPage"
             Title="Associar Produtos">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Fooder" Command="{Binding SalvarProdutosLista}">
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <StackLayout>
        <StackLayout Padding="10">
            <Picker x:Name="ComboListas" ItemsSource="{Binding ListasGravadas}" ItemDisplayBinding="{Binding NomeLista}"  SelectedItem="{Binding ListaSelecionada, Mode=TwoWay}" />
        </StackLayout>
        <ScrollView>
            <ListView x:Name="LstProdutosCadastrados" ItemsSource="{Binding ListaProdutos}" SeparatorVisibility="Default" ItemSelected="LstProdutosCadastrados_ItemSelected" IsRefreshing="{Binding Refresh}" RefreshCommand="{Binding GetRefreshedHistory}">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                                <Label Text="{Binding NomeProduto}" HorizontalOptions="StartAndExpand" VerticalTextAlignment="Center" />
                                <Entry Keyboard="Numeric" HorizontalOptions="End" Text="{Binding QuantidadeProduto}"></Entry>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </ScrollView>

    </StackLayout>
</ContentPage>